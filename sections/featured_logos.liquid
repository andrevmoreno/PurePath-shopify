{{ 'featured-logos.css' | asset_url | stylesheet_tag }}

<div class="featured-logos-section">
    <h2 class="featured-logos-section__title">{{ section.settings.title }}</h2>
    <div class="featured-logos">
        {% for block in section.blocks %}
            <div class="featured-logos__item">
              {%  comment %}  <img src="{{ 'icon-' | append: block.settings.logo_fixed | asset_url }}" alt="{{ block.settings.logo_alt }}" width="100%" height="auto"> */ {% endcomment %}
              <img src="{{ 'icon-loreal.svg' | asset_url }}" alt="{{ block.settings.logo_alt }}" class="featured-logos__logo" width="179px" height="59px">
              <p class="featured-logos__text">{{ block.settings.text }}</p>
            </div>
        {% endfor %}
    </div>
</div>

{% schema %}
{
  "name": "Featured Logos",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Featured by MammaGlow"
    }
  ],
  "blocks": [
    {
      "type": "logo_block",
      "name": "Logo y Texto",
      "settings": [
        {
          "type": "select",
          "id": "logo_fixed",
          "label": "Logo",
          "options": [
            {
              "value": "loreal",
              "label": "L'OREAL"
            },
            {
              "value": "hairStudio",
              "label": "Hair Studio"
            },
            {
              "value": "prenatal",
              "label": "Pr√©natal"
            }
          ],
          "default": "loreal"
        },
        {
          "type": "text",
          "id": "logo_alt",
          "label": "Texto alternativo del logo",
          "default": "Logo Alt"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Texto debajo del logo",
          "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Logos",
      "category": "Logos",
      "blocks": [
        {
          "type": "logo_block"
        },
        {
          "type": "logo_block"
        },
        {
          "type": "logo_block"
        }
      ]
    }
  ]
}
{% endschema %}
